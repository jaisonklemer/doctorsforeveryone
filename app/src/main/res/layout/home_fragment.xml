<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.HomeFragment">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="@dimen/size_70"
        android:layout_height="@dimen/size_70"
        android:layout_margin="@dimen/size_20"
        android:elevation="@dimen/size_4"
        app:cardCornerRadius="@dimen/size_60"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/greenLight">

            <ImageView
                android:id="@+id/imageUser"
                android:layout_width="@dimen/size_50"
                android:layout_height="@dimen/size_50"
                android:src="@drawable/ic_icon_profile"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/size_12"
        android:layout_marginEnd="@dimen/size_12"
        app:layout_constraintBottom_toBottomOf="@+id/cardView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardView2"
        app:layout_constraintTop_toTopOf="@+id/cardView2">

        <TextView
            android:id="@+id/nameUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Olá, Usuário"
            android:textColor="@color/greenLight"
            android:textSize="@dimen/size_20"
            android:layout_marginBottom="@dimen/size_4"
            android:textStyle="bold" />

        <TextView
            android:textStyle="italic"
            android:textColor="@color/greenDark"
            android:layout_marginTop="@dimen/size_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/subtitle"
            android:textSize="@dimen/size_15" />

    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutSearch"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="@dimen/size_300"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_20"
        android:hint="@string/placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/searchDoctors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewSearch"
        android:layout_width="@dimen/size_50"
        android:layout_height="@dimen/size_50"
        android:layout_margin="@dimen/size_20"
        android:elevation="@dimen/size_4"
        app:cardCornerRadius="@dimen/size_60"
        app:layout_constraintBottom_toBottomOf="@+id/textInputLayoutSearch"
        app:layout_constraintStart_toEndOf="@+id/textInputLayoutSearch"
        app:layout_constraintTop_toTopOf="@+id/textInputLayoutSearch">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/greenLight">

            <ImageView
                android:id="@+id/idSearch"
                android:layout_width="@dimen/size_20"
                android:layout_height="@dimen/size_20"
                android:src="@drawable/ic_lupa"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_20"
        android:text="@string/search_specialty"
        android:textColor="@color/greenLight"
        android:textSize="@dimen/size_20"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutSearch" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewSpecialtyList"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_130"
        android:layout_marginTop="@dimen/size_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        tools:listitem="@layout/itens_cards_specialty"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewDoctorsList"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0"
        android:layout_margin="@dimen/size_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewSpecialtyList"
        tools:listitem="@layout/itens_cards_doctors"/>


</androidx.constraintlayout.widget.ConstraintLayout>